<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhang.usearch"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />
 	<uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        android:name="usearch.app.BluetoothApplication">
        <activity
            android:name="usearch.MainActivity"
            android:configChanges="locale" 
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="usearch.HomeActivity"></activity>
        <activity android:name="usearch.MapActivity"></activity>
        <activity android:name="usearch.RadarActivity"></activity>
        <activity android:name="usearch.SearchActivity"></activity>
        <activity android:name="usearch.SettingActivity" android:configChanges="locale"></activity>
        <activity android:name="usearch.InstructionActivity"></activity>
        <activity android:name="usearch.ContactUsActivity"></activity>
        <activity android:name="usearch.LoadWebActivity"></activity>
        <activity android:name="usearch.MapDetailsActivity"></activity>
        <activity android:name="usearch.LookupDistanceActivity" android:theme="@style/MyDialogStyle"></activity>
         <activity 
            android:name="usearch.SelectFileActivity"
            android:theme="@android:style/Theme.Dialog"></activity>
    </application>

</manifest>